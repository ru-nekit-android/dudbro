<?xml version="1.0" encoding="utf-8"?>
<s:View 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark" 
	xmlns:components="spark.components.*"
	xmlns:layouts="spark.layouts.*"
	xmlns:viewComponents="ru.nekit.disn.view.components.*"
	tabBarVisible="false"
	styleName="allDataStyle"
	title="Все данные" 
	>
	
	<s:navigationContent>
		<viewComponents:BackButton id="backCall" label="Профиль"/>
	</s:navigationContent>
	
	<s:layout>
		<layouts:MultiDPIVerticalLayout paddingRight="0" paddingLeft="0" paddingBottom="0" gap="0"/>
	</s:layout>
	
	<s:Scroller width="100%" height="100%" depth="1">
		<s:Group width="100%" height="100%">
			<s:layout>
				<layouts:MultiDPIVerticalLayout paddingRight="10" paddingLeft="10" paddingBottom="10" paddingTop="10" gap="10" verticalAlign="middle"/>
			</s:layout>
			<s:SkinnableContainer width="100%" skinClass="spark.skins.form.FormContainerSkin" backgroundColor="0xffffff">
				<s:layout>
					<layouts:MultiDPIVerticalLayout paddingRight="0" paddingLeft="0" paddingBottom="0" paddingTop="0" gap="0"/>
				</s:layout>
				<s:Group>
					<s:layout>
						<layouts:MultiDPIVerticalLayout paddingLeft="8" paddingTop="10" paddingBottom="6"/>
					</s:layout>
					<components:LabelDisplayComponent text="Личные данные" styleName="buttonMenuTitleStyle"/>
				</s:Group>
				<s:ButtonBar
					id="menuPrivate"
					styleName="buttonMenuStyle"
					labelField="label" 
					width="100%"
					height="100%"	
					>
					<s:layout>
						<layouts:MultiDPIVerticalLayout paddingTop="2" paddingRight="2" paddingLeft="2" paddingBottom="2" gap="1" variableRowHeight="false" rowHeight="46" horizontalAlign="contentJustify"/>
					</s:layout>
				</s:ButtonBar>
			</s:SkinnableContainer>		
			<s:SkinnableContainer width="100%" skinClass="spark.skins.form.FormContainerSkin" backgroundColor="0xffffff">
				<s:layout>
					<layouts:MultiDPIVerticalLayout paddingRight="0" paddingLeft="0" paddingBottom="0" paddingTop="0" gap="0"/>
				</s:layout>
				<s:Group>
					<s:layout>
						<layouts:MultiDPIVerticalLayout paddingLeft="8" paddingTop="10" paddingBottom="6"/>
					</s:layout>
					<components:LabelDisplayComponent text="Социальные данные" styleName="buttonMenuTitleStyle"/>
				</s:Group>
				<s:ButtonBar
					id="menuSocial"
					styleName="buttonMenuStyle"
					labelField="label" 
					width="100%"
					height="100%"	
					>
					<s:layout>
						<layouts:MultiDPIVerticalLayout paddingTop="2" paddingRight="2" paddingLeft="2" paddingBottom="2" gap="1" variableRowHeight="false" rowHeight="46" horizontalAlign="contentJustify"/>
					</s:layout>
				</s:ButtonBar>
			</s:SkinnableContainer>	
		</s:Group>
	</s:Scroller>
	
</s:View>
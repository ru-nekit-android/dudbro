<?xml version="1.0" encoding="utf-8"?>
<s:View 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:flexpad="com.flexpad.*"
	xmlns:components="spark.components.*"
	xmlns:layouts="spark.layouts.*"
	actionBarVisible="false"
	destructionPolicy="never"
	styleName="mainMenuStyle"
	>
	
	<s:layout>
		<layouts:MultiDPIVerticalLayout paddingLeft="5" paddingRight="0" paddingTop="9" gap="5"/>
	</s:layout>
	
	<s:Group width="100%">
		<components:LabelDisplayComponent id="titleLabel" horizontalCenter="0"/>
	</s:Group>
	
	<s:Spacer height="10"/>
	
	<s:Group width="100%" height="100%">
		<s:layout>
			<layouts:MultiDPIVerticalLayout/>
		</s:layout>
		<s:List 
			id="menu"
			width="100%" height="100%">
		</s:List>
	</s:Group>
	
	<s:SkinnableContainer width="100%" id="exitContainer">
		<s:layout>
			<layouts:MultiDPIVerticalLayout paddingBottom="6" paddingLeft="6" paddingRight="6" paddingTop="6" gap="0" verticalAlign="bottom"/>
		</s:layout>
		<s:Button id="exitCall" label="Выход" width="100%"/>
	</s:SkinnableContainer>
	
</s:View>
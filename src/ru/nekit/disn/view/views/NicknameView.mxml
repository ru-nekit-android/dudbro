<?xml version="1.0" encoding="utf-8"?>
<s:View 
	xmlns:fx="http://ns.adobe.com/mxml/2009" 
	xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:layouts="spark.layouts.*" 
	xmlns:viewComponents="ru.nekit.disn.view.components.*"
	styleName="nicknameViewStyle"
	title="Никнейм" 
	>
	
	<s:navigationContent>
		<s:SkinnableContainer skinClass="spark.skins.form.FormContainerSkin" backgroundAlpha="0">
			<s:layout>
				<layouts:MultiDPIHorizontalLayout paddingRight="1" paddingLeft="1" paddingTop="1" paddingBottom="1"/>
			</s:layout>
			<viewComponents:CancelButton id="cancelCall"/>
		</s:SkinnableContainer>
	</s:navigationContent>
	
	<s:actionContent>
		<s:SkinnableContainer skinClass="spark.skins.form.FormContainerSkin" backgroundAlpha="0">
			<s:layout>
				<layouts:MultiDPIHorizontalLayout paddingRight="1" paddingLeft="1" paddingTop="1" paddingBottom="1"/>
			</s:layout>
			<viewComponents:SaveButton id="saveCall"/>
		</s:SkinnableContainer>	
	</s:actionContent>
	
	<s:layout>
		<layouts:MultiDPIVerticalLayout paddingRight="2" paddingLeft="2" paddingBottom="10" gap="5"/>
	</s:layout>
	
	<s:SkinnableContainer id="titleContainer" width="100%">
		<s:layout>
			<layouts:MultiDPIVerticalLayout paddingRight="5" paddingLeft="5" paddingTop="0" paddingBottom="0" gap="5" verticalAlign="middle"/>
		</s:layout>
		<s:TextInput id="nickname" width="100%" prompt="Никнейм" returnKeyLabel="done"/>
	</s:SkinnableContainer>
	
</s:View>